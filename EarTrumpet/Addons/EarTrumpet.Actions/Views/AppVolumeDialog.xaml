<Window x:Class="EarTrumpet.Actions.Views.AppVolumeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EarTrumpet.Actions.Views" xmlns:views="clr-namespace:EarTrumpet.UI.Views"
        mc:Ignorable="d"
        WindowStyle="None" Height="50" Width="200"
        Loaded="Window_Loaded"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Topmost="True">
    <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="8">
        <Grid>
            <!-- Rounded mask (stretches to fill Grid) -->
            <Border
                Name="mask"
                Background="White"
                CornerRadius="8"
            />
            <ContentControl>
                <views:AppItemView>
                    <views:AppItemView.OpacityMask>
                        <VisualBrush Visual="{Binding ElementName=mask}"/>
                    </views:AppItemView.OpacityMask>
                </views:AppItemView>
            </ContentControl>
        </Grid>
    </Border>

</Window>
